<%- include("partials/header"); -%>
<marquee direction="up" class="marq"><h1>Home</h1></marquee>
<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>
    <h1><%= post.title %></h1>
    <p>
        <%= post.content.substring(0,100) + "..." %>
        <a href="/posts/<%=post._id%>" style="color: white;">Read more</a>
    </p>
<% }) %>
